// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dummy {
  id Int @id @default(autoincrement())
}

// Consider using lang and tags as ENUM to avoid unexpected values
model MemeUpload {
  fileId  String   @id
  userId  String
  caption String
  lang    String
  tags    String[]
}
